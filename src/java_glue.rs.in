    pub fn send_record(
        producer: &TopicProducer,
        buffer: &[u8],
        partition: i32,
    ) -> Result<(), String> {
        run_block_on(producer.send_record(buffer, partition)).map_err(fluvio_error_to_string)
    }
    pub fn send(
        producer: &TopicProducer,
        key: &[u8],
        value: &[u8],
    ) -> Result<(), String> {
        run_block_on(producer.send(key, value)).map_err(fluvio_error_to_string)
    }
}
